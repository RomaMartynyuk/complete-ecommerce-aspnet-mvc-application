@model Cinema

@{
    ViewData["Title"] = Model.Name;
}

<div class="row text">
    <div class="col md-8 offset-2" style="margin-top: 150px">
        <p>
            <h1 class="text-white text-center">Details for @Model.Name</h1>
        </p>
        <div class="row" style="margin-top:100px">
            <div class="col text-left">
                <img id="LogoPreview" class="rounded-circle" style="border: #ffc107 5px solid; width: 200px; height: 200px;" />
            </div>
            <div class="row col-10">
                <div class="col-md-8 offset-2">
                        <div class="form-group mb-3">
                            <label asp-for="Logo" class="control-label text-white"></label>
                            <input asp-for="Logo" class="form-control bg-dark border-warning text-white" readonly />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label text-white"></label>
                            <input asp-for="Name" class="form-control bg-dark border-warning text-white" readonly />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label text-white"></label>
                            <input asp-for="Description" class="form-control bg-dark border-warning text-white" readonly />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <a class="btn btn-outline-warning text-white" asp-action="Index">Show All</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-warning float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}
