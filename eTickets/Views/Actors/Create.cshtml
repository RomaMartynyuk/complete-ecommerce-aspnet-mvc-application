@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col md-8 offset-2" style="margin-top: 150px">
        <p>
            <h1>Add a new actor</h1>
        </p>
        <div class="row" style="margin-top:100px">
            <div class="col text-left">
                <img id="ProfilePicturePreview" class="rounded-circle" style="border: #ffc107 5px solid; width: 200px; height: 250px;" />
            </div>
            <div class="row col-10">
                <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        

                        <div class="form-group mb-3">
                            <label asp-for="ProfilePictureURL" class="control-label text-white"></label>
                            <input asp-for="ProfilePictureURL" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="control-label text-white"></label>
                            <input asp-for="FullName" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="control-label text-white"></label>
                            <input asp-for="Bio" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <a class="btn btn-outline-warning" asp-action="Index">Show All</a>
                            <input type="submit" value="Create" class="btn btn-warning float-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
