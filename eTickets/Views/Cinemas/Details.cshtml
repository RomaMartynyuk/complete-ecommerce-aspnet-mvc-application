@model Cinema

@{
    ViewData["Title"] = Model.Name;
}

<div class="row text">
    <div class="col md-8 offset-2" style="margin-top: 150px">
        <p>
            <h1>Details for @Model.Name</h1>
        </p>
        <div class="row" style="margin-top:100px">
            <div class="col text-left">
                <img id="LogoPreview" style="height: 240px; width: 170px;" />
            </div>
            <div class="row col-10">
                <div class="col-md-8 offset-2">
                        <div class="form-group">
                            <label asp-for="Logo" class="control-label"></label>
                            <input asp-for="Logo" class="form-control" readonly/>
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" readonly/>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="margin-top: 10px">
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}
