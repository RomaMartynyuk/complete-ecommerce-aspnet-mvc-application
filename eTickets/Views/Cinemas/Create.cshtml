@model Cinema

@{
    ViewData["Title"] = "Add a new cinema";
}

<div class="row text">
    <div class="col md-8 offset-2" style="margin-top: 150px">
        <p>
            <h1 class="text-center text-white">Add a new cinema</h1>
        </p>
        <div class="row" style="margin-top:100px">
            <div class="col text-left">
                <img id="LogoPreview" class="rounded-circle"style="border: #ffc107 5px solid; width: 200px; height: 200px;" />
            </div>
            <div class="row col-10 text-white">
                <div class="col-md-8 offset-2">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        

                        <div class="form-group mb-3">
                            <label asp-for="Logo" class="control-label"></label>
                            <input asp-for="Logo" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control bg-dark border-warning text-white" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <a class="btn btn-outline-warning" asp-action="Index">Show All</a>
                            <input type="submit" value="Create" class="btn btn-warning float-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })

        $("#Logo").on("change", function(){
            var output = document.getElementById('LogoPreview');
            output.src = $(this).val();
        })
    </script>
}
